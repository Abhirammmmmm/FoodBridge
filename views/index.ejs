 <script>
 // --- Inline toast helpers ---
 function showToast(message, timeout = 10000) {
     const toast = document.getElementById('toast');
     const msg = document.getElementById('toast-msg');
     if (!toast || !msg) return;
    msg.textContent = message;
    // ensure error color (red) for invalid credential popups
    toast.style.background = '#ef4444';
    toast.style.display = 'block';
    toast.style.opacity = '1';
     setTimeout(() => {
         toast.style.transition = 'opacity 300ms';
         toast.style.opacity = '0';
         setTimeout(() => { toast.style.display = 'none'; toast.style.transition = ''; }, 300);
     }, timeout);
 }

 document.addEventListener('DOMContentLoaded', () => {
     // Intercept login form submission to show inline errors instead of redirecting on failure
     const loginForm = document.querySelector('#login-tab form.login-form');
     if (loginForm) {
         loginForm.addEventListener('submit', async (e) => {
             e.preventDefault();
             // build URL-encoded body so express.urlencoded can parse it
             const fd = new FormData(loginForm);
             const params = new URLSearchParams();
             for (const [k, v] of fd.entries()) params.append(k, v);
             try {
                 const res = await fetch(loginForm.action || '/login', {
                     method: loginForm.method || 'POST',
                     headers: { 'Content-Type': 'application/x-www-form-urlencoded', 'Accept': 'application/json' },
                     body: params.toString(),
                     credentials: 'same-origin'
                 });
                const ct = res.headers.get('content-type') || '';
                if (ct.includes('application/json')) {
                    const body = await res.json();
                    if (res.ok && body.redirect) {
                        // login successful
                        window.location.href = body.redirect;
                        return;
                    }
                    showToast(body.message || 'Invalid credentials');
                    return;
                }
                if (res.ok) {
                    // non-json success — fallback reload
                    location.reload();
                    return;
                }
                showToast('Invalid email or password');
             } catch (err) {
                 showToast('Network error — try again');
             }
         });
     }

     // Intercept donor & NGO register forms to validate and show inline errors
     const donorForm = document.getElementById('donorForm');
     const ngoForm = document.getElementById('ngoForm');
     [donorForm, ngoForm].forEach(form => {
         if (!form) return;
        form.addEventListener('submit', async (e) => {
            e.preventDefault();
            const fd = new FormData(form);
            const params = new URLSearchParams();
            for (const [k, v] of fd.entries()) params.append(k, v);
            try {
                const res = await fetch(form.action || '/registrationUser', {
                    method: form.method || 'POST',
                    headers: { 'Content-Type': 'application/x-www-form-urlencoded', 'Accept': 'application/json' },
                    body: params.toString(),
                    credentials: 'same-origin'
                });
                const ct = res.headers.get('content-type') || '';
                if (ct.includes('application/json')) {
                    const body = await res.json();
                    if (res.ok && body.redirect) {
                        window.location.href = body.redirect;
                        return;
                    }
                    showToast(body.message || 'Registration error');
                    return;
                }
                if (res.ok) {
                    showToast('Registration successful — please login', 2500);
                    setTimeout(() => { showTab('login'); }, 1200);
                    return;
                }
                showToast('Registration failed — check details');
             } catch (err) {
                 showToast('Network error — try again');
             }
         });
     });
 });
