.login-form label {
  font-size: 0.9rem;
  color: #333;
}
.login-form input,
.login-form select {
  padding: 10px;
  border-radius: 6px;
  border: 1px solid #ccc;
  font-size: 1rem;
}
.login-form input:focus,
.login-form select:focus {
  border-color: #007bff;
  outline: none;
}

.submit-btn {
  background-color: #007bff;
  color: white;
  padding: 12px;
  font-size: 1rem;
  border: none;
  border-radius: 6px;
  cursor: pointer;
  margin-top: 8px;
}
.submit-btn:hover {
  background-color: #0056b3;
}



