        .form-label {
            font-size: 14px;
            color: #333;
            font-weight: 600;
        }
        .form-input {
            padding: 10px 12px;
            border-radius: 8px;
            border: 1px solid #d1d5db;
            font-size: 14px;
            width: 100%;
